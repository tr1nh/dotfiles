#!/usr/bin/env bash

function clear_user_data() {
  if [ -d ~/.config/google-chrome ]; then
    rm -rf ~/.config/google-chrome
  fi
}

if [ -f ~/.config/google-chrome.bak ]; then
  cd ~/.config/
  clear_user_data
  file_password=$(zenity --text="Password for decrypt data" --password)
  7z x google-chrome.bak -p$file_password
  if [ $? -eq 0 ]; then
    google-chrome-stable
  else
    zenity --text "Wrong password" --warning
  fi
fi

trap clear_user_data EXIT
